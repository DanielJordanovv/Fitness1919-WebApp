@using Fitness1919.Web.ViewModels.Product
@model ProductAddViewModel

@{
    ViewData["Title"] = "Create Product";
}
<link rel="stylesheet" href="~/css/product/productsCreate.css" asp-append-version="true" />
    <script src="~/js/"></script>

<h1>Create Product</h1>
@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger">
            <p style="color:red;">@TempData["ErrorMessage"]</p>
        </div>
}
@if (!ViewData.ModelState.IsValid)
{
        <div class="alert alert-danger">
            <strong>Error:</strong> There was an error while creating the product.
        </div>
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form class="input" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-input">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-input"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-input" min="0">
                <span asp-validation-for="Quantity" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-input">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountPercentage"></label>
                <input asp-for="DiscountPercentage" class="form-input">
                <span asp-validation-for="DiscountPercentage" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="img"></label>
                <input asp-for="img" class="form-input">
                <span asp-validation-for="img" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-input">
                    @foreach (var category in Model.Categories)
                    {
                            <option value="@category.Id">@category.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" class="form-input">
                    @foreach (var brand in Model.Brands)
                    {
                            <option value="@brand.Id">@brand.BrandName</option>
                    }
                </select>
                <span asp-validation-for="BrandId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <button class="createBtn" type="submit" class="btn btn-primary">Create</button>
                <a class="cancelAction" asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>




