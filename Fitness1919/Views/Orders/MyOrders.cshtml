@using Fitness1919.Web.ViewModels.Order
@model IEnumerable<MyOrdersViewModel>

<link rel="stylesheet" href="~/css/order/index.css" asp-append-version="true" />
<!DOCTYPE html>
<html>
@if(!Model.Any())
{
    <p style="position:center; text-align:center; margin-top:150px">No orders yet!</p>
}
else{
     <pre></pre><pre></pre><pre></pre><pre></pre>
<head>
    <title>My Orders</title>
</head>
<body>
    <h1>My Orders</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Created On</th>
                <th>Order Price</th>
                <th>Products</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Name</td>
                    <td>@order.Address</td>
                    <td>@order.PhoneNumber</td>
                    <td>@order.CreatedOn</td>
                    <td>@order.OrderPrice.ToString("f2")</td>
                        <td><a asp-action="OrderDetails" asp-route-id="@order.Id" class="orderDetails">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
}
</html>