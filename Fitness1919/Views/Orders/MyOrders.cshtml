@using Fitness1919.Web.ViewModels.Order
@model IEnumerable<MyOrdersViewModel>
<!DOCTYPE html>
<html>
<head>
    <title>My Orders</title>
</head>
<body>
    <h1>My Orders</h1>
    <table>
        <thead>
            <tr>
                 <th>Full Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Created On</th> 
                <th>Order Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Name</td>
                    <td>@order.Address</td>
                    <td>@order.PhoneNumber</td>
                    <td>@order.CreatedOn</td> 
                    <td>@order.OrderPrice.ToString("f2")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>