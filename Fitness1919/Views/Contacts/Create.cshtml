@using Fitness1919.Web.ViewModels.Contact
@model ContactAddViewModel
@{
    ViewData["Title"] = "Create Contact";
}

<link rel="stylesheet" href="~/css/contact/create.css" asp-append-version="true" />
<pre></pre><pre></pre><pre></pre><pre></pre>
<h1>Create Contact</h1>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <p style="color:red;">@TempData["ErrorMessage"]</p>
    </div>
}
<form class="input" asp-controller="Contacts" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber:</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control contact" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="border-color: #FFD700; background-color: #FFD700; font-weight: bold ; color:black">Create</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="border-color: #FFD700; background-color: #FFD700; font-weight: bold ; color:black">Cancel</a>
</form>
