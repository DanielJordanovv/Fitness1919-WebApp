@using Fitness1919.Web.ViewModels.User
@model LoginFormModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
             <div class="tempdata">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <p>@TempData["ErrorMessage"]</p>
                    }
                </div>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-2">
                    <input asp-for="Email" class="form-control" type="email" autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a asp-controller="User" asp-action="Register">Register as a new user</a>
                    </p>
                </div>
            </form>

        </section>
    </div>
</div>
<style>
    .tempdata p {
        color: red;
        text-align: center;
        font-size: 12px;
    }
</style>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
