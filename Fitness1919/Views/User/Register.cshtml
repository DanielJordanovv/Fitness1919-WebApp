@using Fitness1919.Web.ViewModels.User
@model RegisterFormModel

<link rel="stylesheet" href="~/css/user/register.css" asp-append-version="true" />
<link rel=”stylesheet” href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="nofollow" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">

<div class="row">
    <div class="col-md-4">
        <div class="register-box">
            <h2>Create a new account.</h2>
            <form id="registerForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="user-box">
                    <input asp-for="Email" class="form-control" aria-required="true" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <p></p>
                 <div class="user-box">
                    <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="UserName"></label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <p></p>
                <div class="user-box">
                    <input asp-for="FirstName" class="form-control" aria-required="true" />
                    <label asp-for="FirstName" class="form-label"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <p></p>
                <div class="user-box">
                    <input asp-for="LastName" class="form-control" aria-required="true" />
                    <label asp-for="LastName" class="form-label"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <p></p>
                <div class="user-box">
                    <input asp-for="Address" class="form-control" aria-required="true" />
                    <label asp-for="Address" class="form-label"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div> 
                <p></p>
                <div class="user-box">
                    <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <p></p>
                <div class="user-box">
                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <p></p>
                <div class="user-box">
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="submit-button" id="registerSubmit" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<recaptcha-script />
<partial name="_ValidationScriptsPartial" />
}