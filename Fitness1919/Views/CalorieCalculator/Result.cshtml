@{
    ViewData["Title"] = "Calorie Intake Recommendation";
}

@ViewBag.CaloriesPerDay
 <style>
        body {
            background-image: url("/images/Fitness1919logo.jpg");
            background-repeat: no-repeat;
            background-size: cover;
            color: yellow;
            font-family: Arial, sans-serif;
        }

        h1, h2 {
            color: yellow;
            text-align: center;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 2px solid yellow;
            border-radius: 5px;
            background-color: black;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="number"], input[type="submit"], select {
            padding: 5px;
            margin-bottom: 10px;
            border: 2px solid yellow;
            border-radius: 3px;
            background-color: black;
            color: yellow;
        }

        input[type="submit"] {
            cursor: pointer;
        }

        #result {
            text-align: center;
            margin-top: 20px;
        }

        #result strong {
            color: yellow;
        }

        .field-validation-error {
            color: red;
            display: block;
            margin-top: 5px;
        }
    </style>