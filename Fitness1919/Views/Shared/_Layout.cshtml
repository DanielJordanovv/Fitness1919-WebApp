<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness1919</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fitness1919.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: yellow;
            color: black;
            border-color: black;
            height: 60px;
            margin-left: auto;
            margin-right: auto;
            max-width: 600px; /* Adjust this value as needed */
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 20px;
            border-radius: 50px;
            overflow: hidden;
        }

        .navbar:before,
        .navbar:after {
            content: '';
            position: absolute;
            top: 0;
            height: 100%;
            width: 20px;
            background-color: black;
        }

        .navbar:before {
            left: -10px;
            transform: skewX(45deg);
        }

        .navbar:after {
            right: -10px;
            transform: skewX(-45deg);
        }

        .navbar-brand {
            position: absolute;
            top: 0;
            left: 0;
            padding: 10px;
        }

        .navbar-nav {
            width: 100%;
            justify-content: space-around;
        }

        .form-inline {
            font-weight: 900;
        }

        .login-container {
            background-color: yellow;
            padding: 10px;
            border-radius: 5px;
            margin-top: 10px;
            position: fixed;
            top: 0;
            right: 0;
            margin: 0;
            padding: 10px;
        }

        .login-button {
            background-color: yellow;
            color: black;
            border: none;
            border-radius: 50px;
            padding: 8px 20px;
            font-weight: 900;
            cursor: pointer;
        }

        ul {
            display: flex;
            justify-content: center;
            list-style-type: none;
            padding: 0;
            margin: 0;
            top: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="login-container">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="/images/Home.png" alt="Fitness1919" style="width: 75px; height: 75px;">
        </a>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Fitness1919 - @ReleaseYear
            @if (DateTime.UtcNow.Year != ReleaseYear)
            {
                @Html.Raw($" - {DateTime.UtcNow.Year}")
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
