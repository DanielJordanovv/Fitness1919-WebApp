@using Fitness1919.Web.ViewModels.Feedback
@model IEnumerable<FeedbackAllViewModel>
@{
    ViewData["Title"] = "All Feedbacks";
}

<link rel="stylesheet" href="~/css/feedback/index.css"true" />

<h1>All Feedbacks</h1>
<div style="display: flex; justify-content: center; margin-bottom: 20px;">
    <a asp-action="Create">Create New</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedBackDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeedBackDescription)
                </td>
            </tr>
        }
    </tbody>
</table>
